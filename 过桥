#include<iostream>
using namespace std;

int main(){
    int a,b,c,d;
    while(cin>>a>>b>>c>>d){
        for(int i = 0;i<3;i++){
            if(a>b){
                swap(a,b);
            }
            if(b>c){
                swap(b,c);
            }
            if(c>d){
                swap(c,d);
            }
        }

        if(a+c>2*b){
            cout<<a+b+b+b+d<<endl;
        }
        else{
            cout<<a+a+b+c+d<<endl;
        }
    }

    return 0;
}
